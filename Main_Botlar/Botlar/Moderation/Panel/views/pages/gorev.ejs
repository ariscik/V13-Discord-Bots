<% let sw=global.client.guilds.cache.get(config.guildID) %>
  <%- include('../ek/header.ejs', {bot, user}) %>
    <center>

      <div class="container" style="text-align: center;">
        <div class="row justify-content-center align-items-center">

          <div class="box">
            <form action="gorevver" method="POST">
              <label for="inputState">Görev Verilecek Kişiyi Seç!!</label>
              <select id="gorev-uye" name="gorevuye" class="form-control" required>
                <option selected disabled>Görev Verilecek Kişiyi Seç!</option>
                <% sw.members.cache.filter(e => !e.user.bot && !e.managable).map(e=> { %>
                  <option value="<%=e.id%>">
                    <%= sw.members.cache.get(e.id).user.username %>
                  </option>
                  <% }) %>
              </select>
              <br>
              <label for="inputState">Verilecek Görevi Belirle!</label>
              <input type="text" name="gorevtur" id=""
              style="background-color: #0f664ca8; border: none; color: #fff; border-radius: 10px; padding: 4px;"
              size="55"
              placeholder="Örn: ses-mesaj-invite-taglı-kayıt!" required>
              <br>
              <br>
              <label for="inputState">Görevin Süresini Belirle! (Dakika)</label>
              <input type="number" name="gorevsure" id=""
              style="background-color: #0f664ca8; border: none; color: #fff; border-radius: 10px; width: 480px; padding: 4px;"
              placeholder="Örn: 10-20-30 Dakika" required>
              <br>
              <br>
              <label for="inputState">Görevin Miktarını Belirle!</label>
              <input type="number" name="gorevmiktar" id=""
              style="background-color: #0f664ca8; border: none; color: #fff; border-radius: 10px; width: 480px; padding: 4px;"
              placeholder="Örn: 10-20-30 Adet" required>
              <br>
              <br>
              <label for="inputState">Görevin Ödül Coinini Belirle!</label>
              <input type="number" name="gorevodul" id=""
              style="background-color: #0f664ca8; border: none; color: #fff; border-radius: 10px; width: 480px; padding: 4px;"
              placeholder="Örn: 10-20-30 Coin" required>

              <br>
              <br>
              <button type="submit" id="button">GÖREVİ TANIMLA!</button>
            </form>
          </div>


        </div>
      </div>
    </center>

    <style>
      .box select {
        text-align: center;
        background-color: #343a4088;
        color: white;
      }

      .box label {
        color: white;
        font-size: 25px;
      }

      .box {
        width: 750px;
        float: left;
        height: 600px;
        padding: 20px;
        background: #343a40;
        border-radius: 15px;
        margin: 0px;
        text-align: center;
      }

      #button {
        width: 200px;
        height: 35px;
        border-radius: 150px;
        position: relative;
        background: linear-gradient(to top right, rgb(74, 75, 114) 0%, rgb(63, 64, 87) 100%);
        cursor: pointer;
        line-height: 20px;
        color: rgba(235, 235, 235, 1);
      }

      #button:before {
        content: '';
        z-index: 1;
        position: absolute;
        display: block;
        width: 80%;
        height: 70%;
        top: 15%;
        left: 10%;
        transition: 0.3s opacity ease-in-out;
        filter: blur(15px);
        opacity: 0;
        background: linear-gradient(to top right, rgb(39, 42, 246) 0%, rgb(39, 42, 246) 100%);
        color: rgba(235, 235, 235, 1);
      }

      #button:hover:before {
        opacity: 1;
        transition: 0.3s opacity ease-in-out;
        filter: blur(25px);
        background: linear-gradient(to top right, rgb(39, 42, 246) 0%, rgb(39, 42, 246) 100%);
      }

      #button:after {
        text-align: center;
        line-height: 40px;
        font-size: 18px;
        color: rgba(235, 235, 235, 1);
        font-weight: bold;
        z-index: 5;
        position: absolute;
        display: block;
        border-radius: 180px;
        width: 92%;
        height: 80%;
        top: 2%;
        left: 4%;
        color: white;
      }
    </style>